@model IList<CapgeminiVoting.Models.QuestionModel>

@{
    ViewBag.Title = "Vote";
}

@using (Html.BeginForm("Vote", "Mobile", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @foreach (CapgeminiVoting.Models.QuestionModel q in Model)
        {
            <h2>@q.question</h2>

            if (q.answers.Count() == 0)
            {
                <div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-warning-sign"></span> No answers were found for this question.</div>
            }

            foreach (CapgeminiVoting.Models.AnswerModel a in q.answers)
            {
                if (q.questionType.Equals("0"))
                {
                    <p><input type="submit" name="answer" value="@a.answer" class="btn btn-primary btn-lg" /></p>
                }
            }
        }
    </div>
}

