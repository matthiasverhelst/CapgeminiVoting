@model IList<CapgeminiVoting.Models.QuestionModel>

@{
    ViewBag.Title = "Vote";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @foreach (CapgeminiVoting.Models.QuestionModel q in Model)
        {
            <h5>@q.question</h5>
            
            @foreach (CapgeminiVoting.Models.AnswerModel a in q.answers)
            {
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(q => a.answer, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(q => a.answer, "", new { @class = "text-danger" })
                    </div>
                </div>
            }
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
